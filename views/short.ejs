<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <h1>URL-Shrinker</h1>

      <form action="/users/short" method="post">
        <label for="url" class="sr-only">Enter URL:</label><br />
        <input type="text" class="form-floating mb-3" name="fullUrl" />
        <button type="submit" class="btn btn-success">Shrink!</button>
      </form>
      <table class="table table-striped table-responsive">
        <thead>
          <tr>
            <th>Full-URL</th>
            <th>shortURL</th>
            <th>clicks</th>
          </tr>
        </thead>
        <tbody>
            
          <% shortedUrl.forEach(item => { %>
          <tr>
            <td><a href="<%= item.url %>"><%= item.url %></a></td>
            <td><a href="<%= item.shortURL %>"><%= item.shortURL %></a></td>
            <td><%= item.click %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </body>
</html>
